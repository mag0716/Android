<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.github.mag0716.androidlint.MainActivity">

    <!-- Combining Ellipsize and Maxlines https://issuetracker.google.com/issues/36950033 -->
    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:maxLines="1"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duplicate ids within a single layout" />

    <!-- Ignore layout params on include -->
    <include
        layout="@layout/ng_include_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF0000" />

    <!-- Invalid ID declaration -->
    <TextView
        android:id="@+sample/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duplicate ids within a single layout" />

</android.support.constraint.ConstraintLayout>
